<view class="container">
  <swiper indicator-dots autoplay interval="3000" circular>
    <block wx:for="{{banners}}" wx:key="image">
      <swiper-item>
        <image class="banner" mode="aspectFill" src="{{item.image}}" />
      </swiper-item>
    </block>
  </swiper>

  <view class="section-title">精选商品</view>
  <view class="product-grid">
    <block wx:for="{{products}}" wx:key="id">
      <view class="product-card" data-id="{{item.id}}" bindtap="goDetail">
        <image class="product-image" src="{{item.imageUrls && item.imageUrls[0] || 'https://via.placeholder.com/300'}}" mode="aspectFill" />
        <view class="product-name">{{item.name}}</view>
        <view class="product-price">￥{{item.price}}</view>
      </view>
    </block>
  </view>
</view>
