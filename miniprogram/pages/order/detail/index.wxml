<view class="detail-page" wx:if="{{order}}">
  <view class="section">
    <view class="row">
      <text>订单号</text>
      <text>{{order.orderNo}}</text>
    </view>
    <view class="row">
      <text>状态</text>
      <text>{{order.status}}</text>
    </view>
  </view>
  <view class="section">
    <view class="title">商品明细</view>
    <block wx:for="{{order.items}}" wx:key="id">
      <view class="row">
        <text>{{item.productName}}</text>
        <text>x{{item.qty}}</text>
      </view>
    </block>
  </view>
  <view class="actions">
    <button wx:if="{{order.status === 'pending_payment'}}" bindtap="cancelOrder">取消订单</button>
    <button wx:if="{{order.status === 'shipped'}}" type="primary" bindtap="confirmReceive">确认收货</button>
  </view>
</view>
