.cart-page {
  padding: 16rpx;
}

.cart-item {
  display: flex;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  padding: 16rpx;
}

.cart-item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.info {
  flex: 1;
}

.qty {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 16rpx;
  border-radius: 12rpx;
}

.empty {
  text-align: center;
  color: #999;
  margin-top: 200rpx;
}
