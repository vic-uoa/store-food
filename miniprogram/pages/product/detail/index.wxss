.detail {
  padding: 16rpx;
}

.gallery {
  height: 400rpx;
}

.gallery image {
  width: 100%;
  height: 100%;
}

.info {
  margin-top: 16rpx;
}

.name {
  font-size: 34rpx;
  font-weight: 600;
}

.price {
  margin-top: 8rpx;
  color: #ff4d4f;
  font-size: 32rpx;
}

.qty-row {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
}

.actions {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

button {
  flex: 1;
}
